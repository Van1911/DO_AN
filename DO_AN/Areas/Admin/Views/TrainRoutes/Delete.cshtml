@model DO_AN.Models.TrainRoute

@{
    ViewData["Title"] = "Delete Train Route";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="text-center my-4">Delete Train Route</h1>

<div class="card mx-auto" style="max-width: 600px;">
    <div class="card-body">
        <h3 class="card-title">Are you sure you want to delete this?</h3>
        <div class="mb-3">
            <h4>Train Route Details</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">Start Point:</dt>
                <dd class="col-sm-9">@Model.PointStart</dd>
                <dt class="col-sm-3">End Point:</dt>
                <dd class="col-sm-9">@Model.PointEnd</dd>
            </dl>
        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="IdTrainRoute" />
            <div class="d-grid gap-2">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

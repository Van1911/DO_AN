@model DO_AN.Models.Train

@{
    ViewData["Title"] = "Edit Train";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="text-center my-4">Edit Train</h1>

<div class="card mx-auto" style="max-width: 800px;">
    <div class="card-body">
        <h4 class="card-title">Train Details</h4>
        <hr />
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdTrain" />

            <div class="mb-3">
                <label class="form-label">Train Name</label>
                <input asp-for="NameTrain" class="form-control" />
                <span asp-validation-for="NameTrain" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Start Date</label>
                <input asp-for="DateStart" class="form-control" />
                <span asp-validation-for="DateStart" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Train Route</label>
                <select asp-for="IdTrainRoute" class="form-control" asp-items="ViewBag.IdTrainRoute"></select>
                <span asp-validation-for="IdTrainRoute" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Coefficient</label>
                <input asp-for="CoefficientTrain" class="form-control" />
                <span asp-validation-for="CoefficientTrain" class="text-danger"></span>
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

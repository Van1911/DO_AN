@model IEnumerable<DO_AN.Models.Coach>

@{
    ViewData["Title"] = "Danh sách xe";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    int i = 0;

}

<h1>Danh sách xe</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Tạo mới</a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th scope="col">#</th>

                <th scope="col">Tên xe</th>
                <th scope="col">Loại</th>
                <th scope="col">Số lượng ghế</th>
                <th scope="col">Giá cơ bản</th>
                <th scope="col">Chuyến xe</th>
                <th scope="col">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">
                        @{
                            i = i + 1;
                        } @i
                    </th>
                    <td>@Html.DisplayFor(modelItem => item.NameCoach)</td>
                    <td>@Html.DisplayFor(modelItem => item.Category)</td>
                    <td>@Html.DisplayFor(modelItem => item.SeatsQuantity)</td>
                    <td>@Html.DisplayFor(modelItem => item.BasicPrice)</td>
                    <td>@Html.DisplayFor(modelItem => item.IdTrainNavigation.NameTrain)</td>
                    <td>
                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.IdCoach">Sửa</a>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.IdCoach">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@model DO_AN.Models.Coach

@{
    ViewData["Title"] = "Delete Coach";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="text-center my-4">Delete Coach</h1>

<div class="card mx-auto" style="max-width: 600px;">
    <div class="card-body">
        <h3>Are you sure you want to delete this Coach?</h3>
        <div>
            <h4>Coach Details</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    <strong>Name</strong>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NameCoach)
                </dd>
                <dt class="col-sm-2">
                    <strong>Category</strong>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Category)
                </dd>
                <dt class="col-sm-2">
                    <strong>Seats Quantity</strong>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.SeatsQuantity)
                </dd>
                <dt class="col-sm-2">
                    <strong>Basic Price</strong>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.BasicPrice)
                </dd>
                <dt class="col-sm-2">
                    <strong>Train</strong>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IdTrainNavigation.IdTrain)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="IdCoach" />
                <div class="d-grid gap-2">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

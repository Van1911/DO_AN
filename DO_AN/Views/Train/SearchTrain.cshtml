@{
    Layout = "Master_layout";
}
@using DO_AN.ViewModel.Paging;
@model TrainListViewModel

<style>
    .filter-title {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .filter-group {
        margin-bottom: 1rem;
    }

        .filter-group input {
            height: 24px;
        }

    .expand-icon {
        cursor: pointer;
    }

    /* Custom styles */
    .ticket-container {
        max-width: 800px;
        margin: 0 auto;
    }

    .ticket {
        background-color: #ffffff;
        padding: 15px;
        margin-bottom: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .ticket-info {
        margin-bottom: 10px;
    }

    .ticket-actions {
        margin-top: 15px;
    }

    .pagination {
        display: flex;
        justify-content: center;
        margin-top: 30px;
    }

        .pagination a {
            color: #007bff;
            text-decoration: none;
            padding: 10px 15px;
            border: 1px solid #007bff;
            border-radius: 5px;
            margin: 0 5px;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

            .pagination a:hover {
                background-color: #007bff;
                color: #fff;
            }

    .search-form {
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

        .search-form input[type=text],
        .search-form input[type=date] {
            width: 100%;
            padding: 12px;
            border: 1px solid #ced4da;
            border-radius: 5px;
            margin-bottom: 15px;
            font-size: 16px;
        }

        .search-form button[type=submit] {
            padding: 12px 25px;
            border: none;
            border-radius: 5px;
            background-color: #007bff;
            color: #fff;
            cursor: pointer;
            font-size: 16px;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

            .search-form button[type=submit]:hover {
                background-color: #0056b3;
            }

    .form-control {
    }
</style>
@*  search .... *@
<div class="container" style="width:900px; margin-top:20px;padding:0px">
    <div class="row justify-content-center">
        <div class="search-form">
            <form asp-controller="Train" asp-action="SearchTrain" method="get" style="width:auto">
                <div class="row g-3">
                    <div class="col-lg-3">
                        <input type="text" style="margin-bottom:0px" class="form-control" name="noiDi" placeholder="Nơi đi" value="@ViewBag.NoiDi" autocomplete="off">
                    </div>
                    <div class="col-lg-3">
                        <input type="text" style="margin-bottom:0px" class="form-control" name="noiDen" placeholder="Nơi đến" value="@ViewBag.NoiDen" autocomplete="off">
                    </div>
                    <div class="col-lg-3">
                        <input type="date" style="margin-bottom:0px" class="form-control" name="ngayKhoiHanh" placeholder="Ngày khởi hành" value="@ViewBag.NgayKhoiHanh?.ToString("yyyy-MM-dd")" autocomplete="off">
                    </div>
                    <div class="col-lg-3" style=" display: flex; justify-content: center;">
                        <button type="submit" class="btn btn-primary">Tìm kiếm</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="container row" style="margin-left:auto;margin-right:auto;width:924px;padding:0">
    @*   bộ lọc  *@
    <div class="col-12 col-md-4" style="margin-top:3rem;width:300px; padding-left:0px">
        <div id="route-fixed-left" class="position-relative">
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="mb-0">Sắp xếp</h5>
                </div>
                @* bộ lọc thường sắp xêp, lọc thứ tự *@
                <div class="card-body">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="sort" id="default" checked>
                        <label class="form-check-label" for="default">Mặc định</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="sort" id="earliest" value="time:asc">
                        <label class="form-check-label" for="earliest">Giờ đi sớm nhất</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="sort" id="latest" value="time:desc">
                        <label class="form-check-label" for="latest">Giờ đi muộn nhất</label>
                    </div>

                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="sort" id="asc" value="fare:asc">
                        <label class="form-check-label" for="asc">Giá tăng dần</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="sort" id="desc" value="fare:desc">
                        <label class="form-check-label" for="desc">Giá giảm dần</label>
                    </div>
                </div>
            </div>
            @*   bộ lọc dùng ViewComponent  *@
            @await Component.InvokeAsync("TrainFilter")
        </div>
    </div>


    @* danh sách vé component  *@
    <div class="col-12 col-md-8" style="padding-right:0px">
        <div class="container mt-5" style="margin-top:3rem; padding-right:0px">
            <div class="row">
                <div class="results-container">
                    @await Component.InvokeAsync("TrainSearch", new { noiDi = ViewBag.NoiDi, noiDen = ViewBag.NoiDen, ngayKhoiHanh = ViewBag.NgayKhoiHanh, page = ViewBag.Page })
                </div>
            </div>
        </div>
    </div>
</div>

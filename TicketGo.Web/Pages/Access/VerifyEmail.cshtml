@model DO_AN.ViewModel.VerifyEmailViewModel

<h2>Xác thực email</h2>

<p>Vui lòng nhập mã xác thực đã gửi đến địa chỉ email @Model.Email.</p>

<form asp-action="VerifyEmail" method="post">
    <div class="form-group">
        <label for="VerificationCode">Mã xác thực:</label>
        <input type="text" id="VerificationCode" name="VerificationCode" class="form-control" required />
        <span asp-validation-for="VerificationCode" class="text-danger"></span>
    </div>
    <input type="hidden" name="Email" value="@Model.Email" /> <!-- Thêm trường ẩn để truyền Email -->
    <button type="submit" class="btn btn-primary">Xác thực</button>
</form>

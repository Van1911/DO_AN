@model TicketGo.Application.DTOs.LoginDto

@{
    ViewBag.Title = "Đăng Nhập";
    Layout = "_LayoutAccount";
}

<div class="h-screen bg-gradient-to-br from-navy-700 to-navy-900 flex items-center justify-center px-4 sm:px-6 lg:px-8 overflow-hidden">
    <div class="max-w-md w-full max-h-[calc(100vh-6rem)] bg-white rounded-xl shadow-2xl p-8 transform hover:scale-105 transition-all duration-500 overflow-y-auto">
        <div class="text-center">
            <h2 class="text-4xl font-extrabold text-navy-700 mb-2 animate-fade-in">Đăng Nhập</h2>
            <p class="text-zinc-600 text-sm mb-8 w-80">Truy cập tài khoản của bạn để đặt vé dễ dàng</p>
        </div>
        <form asp-action="Login" asp-controller="Access" method="post" class="space-y-8">
            <!-- Hiển thị thông báo thành công từ TempData -->
            @if (TempData["SuccessMessage"] != null)
            {
                <p class="text-green-500 text-center text-sm font-medium animate-fade-in">@TempData["SuccessMessage"]</p>
            }
            <!-- Hiển thị thông báo lỗi từ TempData -->
            @if (TempData["ErrorMessage"] != null)
            {
                <p class="text-red-500 text-center text-sm font-medium animate-fade-in">@TempData["ErrorMessage"]</p>
            }
            <!-- Hiển thị thông báo lỗi từ ViewBag -->
            @if (ViewBag.Message != null)
            {
                <p class="text-red-500 text-center text-sm font-medium">@ViewBag.Message</p>
            }
            <div class="mb-3">
                <label asp-for="Email" class="block text-sm font-medium text-zinc-600 mb-1"></label>
                <input asp-for="Email"
                       class="w-full p-3 rounded-lg border border-zinc-300 focus:ring-2 focus:ring-lime-400 focus:border-transparent bg-gray-50 text-zinc-800 placeholder-zinc-400 transition-all duration-300"
                       type="email" placeholder="Nhập email của bạn" required autofocus />
                <span asp-validation-for="Email" class="text-red-500 text-xs mt-1 block"></span>
            </div>
            <div class="mb-6">
                <label asp-for="Password" class="block text-sm font-medium text-zinc-600 mb-1"></label>
                <input asp-for="Password"
                       class="w-full p-3 rounded-lg border border-zinc-300 focus:ring-2 focus:ring-lime-400 focus:border-transparent bg-gray-50 text-zinc-800 placeholder-zinc-400 transition-all duration-300"
                       type="password" placeholder="Nhập mật khẩu của bạn" required />
                <span asp-validation-for="Password" class="text-red-500 text-xs mt-1 block"></span>
            </div>
            <div class="mb-3">
                <button type="submit"
                        class="w-full bg-lime-400 text-navy-700 font-semibold py-3 rounded-lg hover:bg-lime-500 hover:shadow-lg transition-all duration-300 transform hover:scale-102">
                    Đăng Nhập
                </button>
            </div>
            <div class="flex justify-between text-sm">
                <a asp-action="ForgotPassword" asp-controller="Access"
                   class="text-zinc-600 hover:text-lime-400 transition-colors duration-300">
                    Quên mật khẩu?
                </a>
                <a asp-action="Register" asp-controller="Access"
                   class="text-zinc-600 hover:text-lime-400 transition-colors duration-300">
                    Tạo tài khoản
                </a>
            </div>
        </form>
    </div>
</div>
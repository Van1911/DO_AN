@model TicketGo.Domain.Entities.Account

@{
    Layout = "_LayoutAccount";
}


<div class="min-h-screen bg-gradient-to-br from-navy-700 to-navy-900 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full bg-white rounded-xl shadow-2xl p-8 transform hover:scale-105 transition-all duration-500">
        <div class="text-center">
            <h2 class="text-4xl font-extrabold text-navy-700 mb-2 animate-fade-in">Đăng Nhập</h2>
            <p class="text-zinc-600 text-sm mb-8">Truy cập tài khoản của bạn để đặt vé dễ dàng</p>
        </div>
        @using (Html.BeginForm("Login", "Access", FormMethod.Post))
        {
            <form class="space-y-6">
                @if (ViewBag.Message != null)
                {
                    <p class="text-red-500 text-center text-sm font-medium">@ViewBag.Message</p>
                }
                <div>
                    <label for="Email" class="block text-sm font-medium text-zinc-600 mb-1">Email</label>
                    @Html.TextBoxFor(x => x.Email, new { @class = "w-full p-3 rounded-lg border border-zinc-300 focus:ring-2 focus:ring-lime-400 focus:border-transparent bg-gray-50 text-zinc-800 placeholder-zinc-400 transition-all duration-300", type = "email", placeholder = "Nhập email của bạn", required = "required", autofocus = "autofocus" })
                    <span asp-validation-for="Email" class="text-red-500 text-xs mt-1 block"></span>
                </div>
                <div>
                    <label for="Password" class="block text-sm font-medium text-zinc-600 mb-1">Mật khẩu</label>
                    @Html.TextBoxFor(x => x.Password, new { @class = "w-full p-3 rounded-lg border border-zinc-300 focus:ring-2 focus:ring-lime-400 focus:border-transparent bg-gray-50 text-zinc-800 placeholder-zin400 transition-all duration-300", type = "password", placeholder = "Nhập mật khẩu của bạn", required = "required" })
                    <span asp-validation-for="Password" class="text-red-500 text-xs mt-1 block"></span>
                </div>
                <div>
                    <button type="submit" class="w-full bg-lime-400 text-navy-700 font-semibold py-3 rounded-lg hover:bg-lime-500 hover:shadow-lg transition-all duration-300 transform hover:scale-102">
                        Đăng Nhập
                    </button>
                </div>
                <div class="flex justify-between text-sm">
                    <a asp-action="ForgotPassword" asp-controller="Access" class="text-zinc-600 hover:text-lime-400 transition-colors duration-300">
                        Quên mật khẩu?
                    </a>
                    <a asp-action="Register" asp-controller="Access" class="text-zinc-600 hover:text-lime-400 transition-colors duration-300">
                        Tạo tài khoản
                    </a>
                </div>
            </form>
        }
    </div>
</div>


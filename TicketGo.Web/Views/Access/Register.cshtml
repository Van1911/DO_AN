@model TicketGo.Application.DTOs.RegisterDto

@{
    Layout = "_LayoutAccount";
}

<div class="h-screen bg-gradient-to-br from-navy-700 to-navy-900 flex items-center justify-center px-4 sm:px-6 lg:px-8 overflow-hidden">
    <div class="max-w-md w-full max-h-[calc(100vh-6rem)] bg-white rounded-xl shadow-2xl p-8 transform hover:scale-105 transition-all duration-500 overflow-y-auto">
        <div class="text-center">
            <h2 class="text-4xl font-extrabold text-navy-700 mb-2 animate-fade-in">Đăng Ký</h2>
            <p class="text-zinc-600 text-sm mb-8 w-80">Tạo tài khoản để bắt đầu đặt vé dễ dàng</p>
        </div>
        @using (Html.BeginForm("Register", "Access", FormMethod.Post, new { @class = "" }))
        {
            @* <div asp-validation-summary="All" class="text-red-500 text-sm mb-4"></div> *@
            @if (ViewBag.Message != null)
            {
                <p class="text-center text-sm font-medium animate-fade-in text-red-500 text-sm mb-4">
                    @ViewBag.Message
                </p>
            }
            <div class="mb-1">
                <label for="Fullname" class="block text-sm font-medium text-zinc-600 mb-1">Họ và tên</label>
                @Html.TextBoxFor(x => x.Fullname, new { @class = "w-full p-2 rounded-lg border border-zinc-300 focus:ring-2 focus:ring-lime-400 focus:border-transparent bg-gray-50 text-zinc-800 placeholder-zinc-400 transition-all duration-300", placeholder = "Nhập họ và tên", required = "required", autofocus = "autofocus" })
                <span asp-validation-for="Fullname" class="text-red-500 text-xs mt-1 block"></span>
            </div>

            <div class="mb-1">
                <label for="Email" class="block text-sm font-medium text-zinc-600 mb-1">Email</label>
                @Html.TextBoxFor(x => x.Email, new { @class = "w-full p-2 rounded-lg border border-zinc-300 focus:ring-2 focus:ring-lime-400 focus:border-transparent bg-gray-50 text-zinc-800 placeholder-zinc-400 transition-all duration-300", type = "email", placeholder = "Nhập email của bạn", required = "required" })
                <span asp-validation-for="Email" class="text-red-500 text-xs mt-1 block"></span>
            </div>
            
            <div class="mb-1">
                <label for="Password" class="block text-sm font-medium text-zinc-600 mb-1">Mật khẩu</label>
                @Html.PasswordFor(x => x.Password, new { @class = "w-full p-2 rounded-lg border border-zinc-300 focus:ring-2 focus:ring-lime-400 focus:border-transparent bg-gray-50 text-zinc-800 placeholder-zinc-400 transition-all duration-300", placeholder = "Nhập mật khẩu của bạn", required = "required" })
                <span asp-validation-for="Password" class="text-red-500 text-xs mt-1 block"></span>
            </div>
            
            <div class="mb-1">
                <label for="ConfirmPassword" class="block text-sm font-medium text-zinc-600 mb-1">Nhập lại mật khẩu</label>
                @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "w-full p-2 rounded-lg border border-zinc-300 focus:ring-2 focus:ring-lime-400 focus:border-transparent bg-gray-50 text-zinc-800 placeholder-zinc-400 transition-all duration-300", placeholder = "Nhập lại mật khẩu", required = "required" })
                <span asp-validation-for="ConfirmPassword" class="text-red-500 text-xs mt-1 block"></span>
            </div>
            
            <div class="mb-1">
                <label for="Phone" class="block text-sm font-medium text-zinc-600 mb-1">Số điện thoại</label>
                @Html.TextBoxFor(x => x.Phone, new { @class = "w-full p-2 rounded-lg border border-zinc-300 focus:ring-2 focus:ring-lime-400 focus:border-transparent bg-gray-50 text-zinc-800 placeholder-zinc-400 transition-all duration-300", type = "tel", placeholder = "Nhập số điện thoại" })
                <span asp-validation-for="Phone" class="text-red-500 text-xs mt-1 block"></span>
            </div>
            
            <div class="mb-1">
                <label for="DateOfBirth" class="block text-sm font-medium text-zinc-600 mb-1">Ngày sinh</label>
                @Html.TextBoxFor(x => x.DateOfBirth, new { @class = "w-full p-2 rounded-lg border border-zinc-300 focus:ring-2 focus:ring-lime-400 focus:border-transparent bg-gray-50 text-zinc-800 placeholder-zinc-400 transition-all duration-300", type = "date" })
                <span asp-validation-for="DateOfBirth" class="text-red-500 text-xs mt-1 block"></span>
            </div>
            
            <div class="mb-1">
                <label class="block text-sm font-medium text-zinc-600 mb-1">Giới tính</label>
                <div class="flex space-x-6">
                    <label class="flex items-center text-zinc-600">
                        <input class="form-check-input h-4 w-4 text-lime-400 focus:ring-lime-400 border-zinc-300 rounded transition-all duration-300" type="radio" asp-for="Sex" value="true" />
                        <span class="ml-2">Nam</span>
                    </label>
                    <label class="flex items-center text-zinc-600">
                        <input class="form-check-input h-4 w-4 text-lime-400 focus:ring-lime-400 border-zinc-300 rounded transition-all duration-300" type="radio" asp-for="Sex" value="false" />
                        <span class="ml-2">Nữ</span>
                    </label>
                </div>
                <span asp-validation-for="Sex" class="text-red-500 text-xs mt-1 block"></span>
            </div>
            <div class="mt-3 mb-3">
                <button type="submit" class="w-full bg-lime-400 text-navy-700 font-semibold py-2 rounded-lg hover:bg-lime-500 hover:shadow-lg transition-all duration-300 transform hover:scale-102">
                    Đăng Ký
                </button>
            </div>
            <div class="text-center">
                <a class="text-zinc-600 transition-colors duration-300 text-sm">Đã có tài khoản?</a>
                <a asp-action="Login" asp-controller="Access" class="text-zinc-600 hover:text-lime-400 transition-colors duration-300 text-sm">
                    Đăng nhập
                </a>
            </div>
        }
    </div>
</div>
@model TicketGo.Application.DTOs.AccountDto

@{
    Layout = "_LayoutAccount";
}

<div class="min-h-screen bg-gradient-to-br from-navy-700 to-navy-900 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full bg-white rounded-xl shadow-2xl p-8 transform hover:scale-105 transition-all duration-500">
        <div class="text-center">
            <h2 class="text-4xl font-extrabold text-navy-700 mb-2 animate-fade-in">Đăng Ký</h2>
            <p class="text-zinc-600 text-sm mb-8">Tạo tài khoản để bắt đầu đặt vé dễ dàng</p>
        </div>
        @using (Html.BeginForm("Register", "Access", FormMethod.Post))
        {
            <form class="space-y-6">
                @if (ViewBag.Status != null)
                {
                    if (ViewBag.Status == 1)
                    {
                        <p class="text-lime-500 text-center text-sm font-medium">Đăng ký thành công</p>
                    }
                    else if (ViewBag.Status == 0)
                    {
                        <p class="text-red-500 text-center text-sm font-medium">Đăng ký thất bại</p>
                    }
                }
                <div>
                    <label for="Email" class="block text-sm font-medium text-zinc-600 mb-1">Email</label>
                    @Html.TextBoxFor(x => x.Email, new { @class = "w-full p-3 rounded-lg border border-zinc-300 focus:ring-2 focus:ring-lime-400 focus:border-transparent bg-gray-50 text-zinc-800 placeholder-zinc-400 transition-all duration-300", type = "email", placeholder = "Nhập email của bạn", required = "required" })
                    <span asp-validation-for="Email" class="text-red-500 text-xs mt-1 block"></span>
                </div>
                @* <div>
                    <label for="FullName" class="block text-sm font-medium text-zinc-600 mb-1">Họ và tên</label>
                    @Html.TextBoxFor(x => x.FullName, new { @class = "w-full p-3 rounded-lg border border-zinc-300 focus:ring-2 focus:ring-lime-400 focus:border-transparent bg-gray-50 text-zinc-800 placeholder-zinc-400 transition-all duration-300", type = "text", placeholder = "Nhập họ và tên của bạn", required = "required" })
                    <span asp-validation-for="FullName" class="text-red-500 text-xs mt-1 block"></span>
                </div> *@
                <div>
                    <label for="Password" class="block text-sm font-medium text-zinc-600 mb-1">Mật khẩu</label>
                    @Html.PasswordFor(x => x.Password, new { @class = "w-full p-3 rounded-lg border border-zinc-300 focus:ring-2 focus:ring-lime-400 focus:border-transparent bg-gray-50 text-zinc-800 placeholder-zinc-400 transition-all duration-300", placeholder = "Nhập mật khẩu của bạn", required = "required" })
                    <span asp-validation-for="Password" class="text-red-500 text-xs mt-1 block"></span>
                </div>
                @* <div>
                    <label for="ConfirmPassword" class="block text-sm font-medium text-zinc-600 mb-1">Xác nhận mật khẩu</label>
                    @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "w-full p-3 rounded-lg border border-zinc-300 focus:ring-2 focus:ring-lime-400 focus:border-transparent bg-gray-50 text-zinc-800 placeholder-zinc-400 transition-all duration-300", placeholder = "Xác nhận mật khẩu", required = "required" })
                    <span asp-validation-for="ConfirmPassword" class="text-red-500 text-xs mt-1 block"></span>
                </div> *@
                <div>
                    <label for="Phone" class="block text-sm font-medium text-zinc-600 mb-1">Số điện thoại</label>
                    @Html.TextBoxFor(x => x.Phone, new { @class = "w-full p-3 rounded-lg border border-zinc-300 focus:ring-2 focus:ring-lime-400 focus:border-transparent bg-gray-50 text-zinc-800 placeholder-zinc-400 transition-all duration-300", type = "tel", placeholder = "Nhập số điện thoại" })
                    <span asp-validation-for="Phone" class="text-red-500 text-xs mt-1 block"></span>
                </div>
                <div>
                    <label for="DateOfBirth" class="block text-sm font-medium text-zinc-600 mb-1">Ngày sinh</label>
                    @Html.TextBoxFor(x => x.DateOfBirth, new { @class = "w-full p-3 rounded-lg border border-zinc-300 focus:ring-2 focus:ring-lime-400 focus:border-transparent bg-gray-50 text-zinc-800 placeholder-zinc-400 transition-all duration-300", type = "date" })
                    <span asp-validation-for="DateOfBirth" class="text-red-500 text-xs mt-1 block"></span>
                </div>
                <div>
                    <label class="block text-sm font-medium text-zinc-600 mb-1">Giới tính</label>
                    <div class="flex space-x-6">
                        <label class="flex items-center text-zinc-600">
                            <input class="form-check-input h-4 w-4 text-lime-400 focus:ring-lime-400 border-zinc-300 rounded" type="radio" asp-for="Sex" value="true" /> 
                            <span class="ml-2">Nam</span>
                        </label>
                        <label class="flex items-center text-zinc-600">
                            <input class="form-check-input h-4 w-4 text-lime-400 focus:ring-lime-400 border-zinc-300 rounded" type="radio" asp-for="Sex" value="false" /> 
                            <span class="ml-2">Nữ</span>
                        </label>
                    </div>
                </div>
                <div>
                    <button type="submit" class="w-full bg-lime-400 text-navy-700 font-semibold py-3 rounded-lg hover:bg-lime-500 hover:shadow-lg transition-all duration-300 transform hover:scale-102">
                        Đăng Ký
                    </button>
                </div>
                <div class="text-center">
                    <a asp-action="Login" asp-controller="Access" class="text-zinc-600 hover:text-lime-400 transition-colors duration-300 text-sm">
                        Đã có tài khoản? Đăng nhập
                    </a>
                </div>
            </form>
        }
    </div>
</div>


@{
    ViewData["Title"] = "Trang chủ";
}

<div class="bg-gradient-to-b from-navy-50 to-gray-100 py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-3xl md:text-4xl font-bold text-navy-700 mb-6 animate-fade-in">
            Vexere - Cam kết hoàn 150% nếu nhà xe không cung cấp dịch vụ vận chuyển
        </h1>
        <div class="bg-white rounded-2xl shadow-xl p-8 max-w-5xl mx-auto">
            <form asp-controller="Train" asp-action="ListTrain" method="get" class="flex flex-col md:flex-row gap-4 justify-center items-center">
                <div class="relative w-full md:w-1/4">
                    <input type="text" name="noiDi" placeholder="Nơi đi" value="@ViewBag.NoiDi" autocomplete="off"
                           class="w-full p-4 rounded-lg border border-zinc-300 focus:ring-2 focus:ring-lime-400 focus:border-transparent transition-all duration-300" style="height: 50px;">
                    <div id="noiDiSuggestions" class="hidden absolute z-10 w-full bg-white shadow-lg rounded-lg mt-1 max-h-60 overflow-y-auto"></div>
                </div>
                <div class="relative w-full md:w-1/4">
                    <input type="text" name="noiDen" placeholder="Nơi đến" value="@ViewBag.NoiDen" autocomplete="off"
                           class="w-full p-4 rounded-lg border border-zinc-300 focus:ring-2 focus:ring-lime-400 focus:border-transparent transition-all duration-300" style="height: 50px;">
                    <div id="noiDenSuggestions" class="hidden absolute z-10 w-full bg-white shadow-lg rounded-lg mt-1 max-h-60 overflow-y-auto"></div>
                </div>
                <div class="w-full md:w-1/4">
                    <input type="date" name="ngayKhoiHanh" placeholder="Ngày khởi hành" value="@ViewBag.NgayKhoiHanh?.ToString("yyyy-MM-dd")"
                           class="w-full p-4 rounded-lg border border-zinc-300 focus:ring-2 focus:ring-lime-400 focus:border-transparent transition-all duration-300" style="height: 50px;">
                </div>
                <button type="submit" class="bg-lime-400 text-navy-700 font-semibold px-8 py-4 rounded-lg hover:bg-lime-500 transition-all duration-300 transform hover:scale-105">
                    Tìm kiếm
                </button>
            </form>
        </div>
    </div>
</div>

